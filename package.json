{
  "name": "claude-term",
  "version": "0.0.1",
  "description": "Lightweight MCP client for Anthropic Claude Code terminal interaction",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-term": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/cli.js start",
    "dev": "tsx src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx,.cjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.cjs --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\" \"./*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\" \"./*.{json,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "claude",
    "cli",
    "terminal",
    "code-assistant"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "commander": "^12.0.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
